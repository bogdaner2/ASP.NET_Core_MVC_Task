@{
    ViewData["Title"] = "UserTodoDone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>The list of todo which are done</h2>
<h3>User : @Html.ActionLink((string)ViewBag.User.Name, "Users", "Entity", new { id = ViewBag.User.Id }, null)</h3>
@if (ViewBag.result.Count != 0)
{
    <table class="table table-condensed">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Todo Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var todo in ViewBag.result)
        {
            <tr>
                <th scope="row">@todo.Item1</th>
                <td> @Html.ActionLink((string) todo.Item2, "Comments", "Entity", new {id = todo.Item1}, null)</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h3>No todos</h3>
}

